<Window
    x:Class="mfdf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:mfdf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <!-- Gentle top-to-bottom blue fade -->
                <GradientStop Color="#FFE5F4FF" Offset="0.0" />
                <!-- very light -->
                <GradientStop Color="#C6E4FF"   Offset="0.6" />
                <!-- mid-soft -->
                <GradientStop Color="#9BCEFF"   Offset="1.0" />
                <!-- slightly deeper -->
            </LinearGradientBrush>
        </Border.Background>

        <Grid x:Name="MainGrid" Background="#C7E5F9" VerticalAlignment="Center" 
              HorizontalAlignment="Center" Margin="10" BorderBrush="SteelBlue" BorderThickness="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="250"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Margin is left, top, right, bottom -->
            <RichTextBlock x:Name="IntroText" Margin="20" FontSize="16">
                <Paragraph>
                    mfdf can recover: <LineBreak /> 
                    • the <Italic>Created</Italic> and <Italic>Modified</Italic> dates for most image files
                    <LineBreak />
                    • the <Italic>Created</Italic> date for most video files
                    <LineBreak />
                    <LineBreak />
                    It works best for media files copied directly from a camera.
                    <LineBreak />
                    More details on the <Hyperlink NavigateUri="https://mfdf.osola.org.uk">app website</Hyperlink> .     
                </Paragraph>
            </RichTextBlock>

            <Button x:Name="PickFolderButton" Content="Select your media file directory" FontWeight="SemiBold"
                    Click="OnPickFolderClicked" Margin="10"
                    HorizontalAlignment="Center"
                    Background="#CCF9C7"
                    Grid.Row="1"/>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="2" Margin="20" FontSize="14">
                <!-- Allow 16px for scrollbar-->
                <TextBlock x:Name="ResultText" TextWrapping="Wrap" Margin="15,15,31,15" Visibility="Collapsed" />
            </ScrollViewer>

        </Grid>
    </Border>

</Window>
